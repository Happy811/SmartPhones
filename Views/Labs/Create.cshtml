@model SmartPhones.Models.Lab

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Lab</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="New">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
              
                <input asp-for="LabId" type="hidden" />
                <span asp-validation-for="LabId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MobileModel" class="control-label"></label>
                <input asp-for="MobileModel" class="form-control" />
                <span asp-validation-for="MobileModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fault" class="control-label"></label>
                <input asp-for="Fault" class="form-control" />
                <span asp-validation-for="Fault" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedRepairDate" class="control-label"></label>
                <input asp-for="ExpectedRepairDate" class="form-control" />
                <span asp-validation-for="ExpectedRepairDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsRepairable" /> @Html.DisplayNameFor(model => model.IsRepairable)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeadCondition" /> @Html.DisplayNameFor(model => model.IsDeadCondition)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Update/Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Labs">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
